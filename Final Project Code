import java.util.Scanner;
	//this imports a scanner for inputs in our program
	import java.time.LocalDate;   
	//this imports a library for date to display the days date
	class collegeavg { // Superclass (parent)
		 public void display() {
		   System.out.println("The average college student spends");
		 }
		}
		class collegeamount extends collegeavg { //subclass/superclass created, will be called inside program
		 public void display() {
		   super.display();
		   System.out.println("$2082 per month");
		 }
		}
	abstract class Projecttest{
		
		//name of class
